<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.SoftwareProject.beuth.QuestionInputActivity" >
    
    <TextView
        android:id="@+id/headQuestionTypeClosed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="22sp"
        android:text="@string/headQuestionTypeClosed" />
    
    <!-- Linie Start -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="18dp"
        android:background="#FF000000" />
    <!-- Linie Ende -->
    
	<EditText
	    android:id="@+id/editQuestionTypeClosedTheme"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_gravity="start"
	    android:layout_marginBottom="18dp"
	    android:background="@color/blueFields"
	    android:inputType="text"
	    android:minHeight="36dp"
	    android:hint="@string/hintQuestionTypeClosedTheme" />
	
	<EditText
	    android:id="@+id/editQuestionTypeClosedQuestion"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_gravity="start"
	    android:layout_marginBottom="18dp"
	    android:background="@color/blueFields"
	    android:inputType="text"
	    android:minHeight="36dp"
	    android:hint="@string/hintQuestionTypeClosedQuestion" />
	
	<EditText
	    android:id="@+id/editQuestionTypeClosedAnswer"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="start|top"
	    android:layout_marginBottom="18dp"
	    android:background="@color/blueFields"
	    android:hint="@string/hintQuestionTypeClosedAnswer"
	    android:inputType="textMultiLine"
	    android:minHeight="108dp" />
	
	<RadioGroup
        android:id="@+id/radioQuestionCorrect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_below="@+id/saveQuestionTypeClosed" >

        <RadioButton
            android:id="@+id/radioQuestionTrue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radio_true" 
            android:layout_marginTop="18dp"
            android:checked="true" />

        <RadioButton
            android:id="@+id/radioQuestionFalse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/radio_false"
            android:layout_marginTop="18dp" />

    </RadioGroup>
    
	<Button android:id="@+id/saveQuestionTypeClosed"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="end"
		android:text="@string/saveQuestionTypeClosed" />

</LinearLayout>